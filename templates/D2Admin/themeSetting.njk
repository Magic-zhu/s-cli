// 主题名称
$theme-name: '{{theme-name}}';
// 主题背景颜色
$theme-bg-color: {{theme-bg-color}};
// 主题背景图片遮罩
$theme-bg-mask: rgba({{theme-bg-mask}}, .3);

// container组件
$theme-container-background-color: rgba({theme-container-background-color}, .9);
$theme-container-header-footer-background-color: {{theme-container-header-footer-background-color}};
$theme-container-border-inner: 1px solid {{theme-container-border-inner}};
$theme-container-border-outer: 1px solid {{theme-container-border-outer}};

$theme-multiple-page-control-color: {{theme-multiple-page-control-color}};
$theme-multiple-page-control-color-active: $color-text-normal;
$theme-multiple-page-control-nav-prev-color: {{theme-multiple-page-control-border-color}};
$theme-multiple-page-control-nav-next-color: {{theme-multiple-page-control-border-color}};
$theme-multiple-page-control-border-color: {{theme-multiple-page-control-border-color}};
$theme-multiple-page-control-border-color-active: {{theme-multiple-page-control-border-color-active}};
$theme-multiple-page-control-background-color: rgba({{theme-multiple-page-control-background-color}}, .5);
$theme-multiple-page-control-background-color-active: {{theme-multiple-page-control-background-color-active}};

// 顶栏和侧边栏中展开的菜单 hover 状态下
$theme-menu-item-color-hover: {{theme-menu-item-color-hover}};
$theme-menu-item-background-color-hover: {{theme-menu-item-background-color-hover}};

// 顶栏上的文字颜色
$theme-header-item-color: {{theme-header-item-color}};
$theme-header-item-background-color: transparent;
// 顶栏上的项目在 hover 时
$theme-header-item-color-hover: {{theme-header-item-color-hover}};
$theme-header-item-background-color-hover: rgba({{theme-header-item-background-color-hover}}, .2);
// 顶栏上的项目在 focus 时
$theme-header-item-color-focus: {{theme-header-item-color-focus}};
$theme-header-item-background-color-focus: rgba({{theme-header-item-background-color-focus}}, .2);
// 顶栏上的项目在 active 时
$theme-header-item-color-active: {{theme-header-item-color-active}};
$theme-header-item-background-color-active: rgba({{theme-header-item-background-color-active}}, .3);

// 侧边栏上的文字颜色
$theme-aside-item-color: {{theme-aside-item-color}};
$theme-aside-item-background-color: transparent;
// 侧边栏上的项目在 hover 时
$theme-aside-item-color-hover: {{theme-aside-item-color-hover}};
$theme-aside-item-background-color-hover: rgba({{theme-aside-item-background-color-hover}}, .2);
// 侧边栏上的项目在 focus 时
$theme-aside-item-color-focus: {{theme-aside-item-color-focus}};
$theme-aside-item-background-color-focus: rgba({{theme-aside-item-background-color-focus}}, .2);
// 侧边栏上的项目在 active 时
$theme-aside-item-color-active: {{theme-aside-item-color-active}};
$theme-aside-item-background-color-active: rgba({{theme-aside-item-background-color-active}}, .3);

// 侧边栏菜单为空的时候显示的元素
$theme-aside-menu-empty-icon-color: {{theme-aside-menu-empty-icon-color}};
$theme-aside-menu-empty-text-color: {{theme-aside-menu-empty-text-color}};
$theme-aside-menu-empty-background-color: rgba({{theme-aside-menu-empty-background-color}}, .2);
$theme-aside-menu-empty-icon-color-hover: {{theme-aside-menu-empty-icon-color-hover}};
$theme-aside-menu-empty-text-color-hover: {{theme-aside-menu-empty-text-color-hover}};
$theme-aside-menu-empty-background-color-hover: rgba({{theme-aside-menu-empty-background-color-hover}}, .3);