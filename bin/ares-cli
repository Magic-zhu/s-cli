#!/usr/bin/env node --harmony
const cmd = require('commander')
const message = require('../utils/message')
cmd
    .version('1.1.2')
cmd
    .usage('<command>')
cmd
    .command('update')
    .description('更新脚手架')
    .action(()=>{
        message.success('当前版本：V1.0.23')
    })
cmd
    .command('scan')
    .description('代码扫描')
    .action(()=>{
       require('../command/scan')()
    })
cmd.parse(process.argv)